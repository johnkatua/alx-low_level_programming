#include "holberton.h"
/**
 * cap_string - It takes one argument
 * @a: string to be capitalized
 * It capitalizes all words of a string
 * Return: returns pointer to changed string
 */
char *cap_string(char *a)
{
	int idx = 0;

	while (a[idx])
	{
		while (!(a[idx] >= 'a' && a[idx] <= 'z'))
			idx++;

		if (a[idx - 1] == ' ' ||
		    a[idx - 1] == '\t' ||
	            a[idx - 1] == '\n' ||
       	            a[idx - 1] == ',' ||
		    a[idx - 1] == ';' ||
	            a[idx - 1] == '.' ||
       	            a[idx - 1] == '!' ||
		    a[idx - 1] == '?' ||
	            a[idx - 1] == '"' ||
       	            a[idx - 1] == '(' ||
		    a[idx - 1] == ')' ||
	            a[idx - 1] == '{' ||
       	            a[idx - 1] == '}' ||
		    idx == 0)
			a[idx] -= 32;

		idx++;
	}
	return (a);
}
